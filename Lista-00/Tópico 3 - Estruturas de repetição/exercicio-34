#include <stdio.h>

int main() {
    int idadeA, idadeB;

    for (idadeA = 1; idadeA <= 100; idadeA++) { 
        idadeB = 81 - idadeA; 
        if (2 * (idadeB + idadeA) == 81) {
            printf("Idade de A: %d\n", idadeA);
            printf("Idade de B: %d\n", idadeB);
            return 0; 
        }
    }

    printf("Não foi possível encontrar as idades de A e B com base na afirmação.\n");

    return 0;
}
